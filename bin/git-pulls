#!/usr/bin/env bash

if [[ -z "$1" ]]; then
	dir=$(pwd)
else
	dir=$(cd $1 && pwd)
fi

for i in $(ls $dir)
do
	echo $i
    i=${dir}/${i}
    if [[ -f "${i}/.git/config" ]]; then
        cd $i
        echo "Pull from: " $(grep 'url' .git/config  | awk -F '=' '{print $2}')
        git pull
		cd ..
    fi
done