# -*- mode: gitconfig; indent-tabs-mode: t; -*- vim: set ft=gitconfig nolist noet:

[alias]
	amend = commit --amend --no-edit
	bl = blame
	br = branch
	ci = commit
	cl = clone
	co = checkout
	cobm = checkout-branch-match
	cp = cherry-pick

	# History in one line per commit. Now in Technicolor!
	# Abbrv hash, author name (16 chars), commit message (wrapped at 72 chars)
	ol = "!git log $1 --format='%C(auto)%h %<(16,trunc)%an %w(72,0,25)%s'"

	pff = pull --ff-only --no-stat
	pr = pull --rebase
	rbc = rebase --continue
	rbi = rebase --interactive
	root = rev-parse --show-toplevel
	sh = show
	st = status
[init]
	defaultBranch = master
[user]
	name = imxieke
	email = oss@live.hk
[author]
	name = imxieke
	email = oss@live.hk
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = false
	ff = only
[push]
	default = upstream
[core]
	fileMode = false
	quotepath = false
	pager = delta
	ignorecase = false
	bare = false
	excludesfile = /Users/imxieke/.boxs/conf/gitignore
	editor = nvim
[color]
	ui = auto
	status = auto
	branch = auto
	diff = auto
[color "diff"]
    meta = magenta bold
    new = green bold
    old = red italic
[color "status"]
	added = green
[color "branch"]
	remote = yellow
[rebase]
	autostash = true
[help]
	autocorrect = 1
[interactive]
	diffFilter = delta --color-only --features=interactive
[delta]
	features = decorations
    side-by-side = true
    minus-style = red bold ul "#ffeeee"
    line-numbers = true
    line-numbers-left-format = ""
    line-numbers-right-format = "â”‚ "

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
[http]
	proxy = http://127.0.0.1:7890
[https]
	proxy = http://127.0.0.1:7890