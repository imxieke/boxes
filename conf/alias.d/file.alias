exa_params="exa --all --long --icons --group --git --color-scale --classify --group-directories-first --time-style=long-iso"
alias l=${exa_params}

# case-insensitively
alias llf="${exa_params}  --sort filename"
# case-sensitively
alias llfc="${exa_params}  --sort Filename"
# sort by size
alias lls="${exa_params}  --sort size"
alias llm="${exa_params}  --sort modified"
alias llc="${exa_params}  --sort created"

# æ–‡ä»¶æ ‘ðŸŒ²
alias llt="${exa_params} --tree"

# å¿½ç•¥ .gitignore æ–‡ä»¶
alias llg="${exa_params} --git-ignore"

# bat Diff
alias bdiff='bat --diff'

# replace df
alias ldf="duf"

# quick jump
alias ~='cd ~'
alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .....='cd ../../../../'

alias ':q'="exit"
alias gdu='grc du -h'
alias sdu='/usr/bin/du -h -d 1 -I ~/Library -I /Applications -I /dev'
