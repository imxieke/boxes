alias pkg-update="sudo pacman -Syy"
alias pkg-upgrade="sudo pacman -Syyu"
alias pkg-add="sudo pacman -S"
alias pkg-remove="sudo pacman -Rsc"
alias pkg-search="pacman -Ss"
alias pkg-info="pacman -Si"
alias pkg-list="pacman -Sl"
alias pkg-clean="sudo pacman -Scc"
alias pkg-purge="sudo pacman -Rns"
alias pkg-install-file="sudo pacman -U"
alias pkg-info-file="pacman -Qip"
alias pkg-download="sudo pacman -Sw"